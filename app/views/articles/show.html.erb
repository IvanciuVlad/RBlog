<h2 align="center">
  Title: <%= @article.title %>
</h2>

<div class="well col-xs-8 xol-xs-offset-2">
  <% if @article.user %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
            Created by
          <a class="article-title">
            <%= link_to @article.user.username, user_path(@article.user) %>
          </a>
          (<%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>)
        </div>
      </div>
    </ul>
  <% end %>

  <h4 class="center">
    <strong>Description:</strong>
  </h4>
  <hr>
  <%= simple_format(@article.description) %>
  <% if @article.categories.any? %>
    <p>Categories: <%= render @article.categories %></p>
  <% end %>

  <div class="article-actions">
    <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
      <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this article", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
      <%= link_to "Add comment", new_article_comment_path(@article), class: "btn btn-xs btn-primary" %>
    <% elsif logged_in?%>
        <%= link_to "Add comment", new_article_comment_path(@article), class: "btn btn-xs btn-primary" %>
    <% end %>
    <%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>
  </div>

  <h4 class="art-comments">Comments</h4>
  <%= render 'comments/comment', obj: @article.comments.reverse %>
</div>