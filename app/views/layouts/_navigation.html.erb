<nav class="navbar navbar-expand-lg navbar-dark bg-danger">
  <div class="container">
    <%= link_to 'RBlog', root_path, class: 'navbar-brand' %>
    <% if current_user %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">

          <li class="nav-item <%= "active" if request.path == my_friends_path %>">
            <%= link_to "My friends", my_friends_path, class: "nav-link" %>
          </li>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Profile
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                <i class="fas fa-edit"></i>
                Edit profile
              <% end %>
              <%= link_to user_path(current_user), class: "dropdown-item" do %>
                <i class="fas fa-user-circle"></i>
                View Profile
              <% end %>
            </div>
          </li>
          <li class="nav-item">
            <%= link_to "Create article", new_article_path, class: "nav-link" %>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item user-name">
            <i class="fa fa-user"></i>
            <%= current_user.username %>
          </li>
          <li class="nav-item">
            <%= link_to("Logout", destroy_user_session_path, class: "btn btn-danger logout-button", method: :delete) %>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
